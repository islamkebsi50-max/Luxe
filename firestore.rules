rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to products collection (public)
    match /products/{document=**} {
      allow read: if true;
      allow write: if false; // Admin API writes only
    }

    // Allow read/write to cart items for authenticated sessions
    match /carts/{sessionId}/items/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Allow read/write to orders for authenticated sessions
    match /orders/{sessionId}/items/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
